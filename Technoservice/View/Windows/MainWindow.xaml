<Window x:Class="Technoservice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Technoservice"
        mc:Ignorable="d"
        Title="Главное окно" MinHeight="720" MinWidth="1280" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Техносервис" FontSize="30" FontWeight="SemiBold"/>
            <Button x:Name="OrderBtn" Grid.Column="2" Content="Заявки" Click="OrderBtn_Click"/>
            <Frame x:Name="MainFrame" Grid.Row="2" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
